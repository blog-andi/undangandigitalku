---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Undangan Khitanan Digital - Tasyakuran Khitan',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Tasyakuran Khitanan"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Pilih Desain Khitan',
        href: '#',
        icon: 'tabler:download',
      },
      { text: 'Fitur Unggulan', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Rayakan Langkah Berani <span class="hidden sm:inline">Putra Anda</span> dengan <span
        class="text-accent dark:text-white">Undangan Khitan</span
      > Digital
    </Fragment>

    <Fragment slot="subtitle">
      Wujud syukur atas keberanian putra tercinta dalam menjalankan syariat. Bagikan informasi tasyakuran khitanan dengan lebih praktis, elegan, dan mudah diakses oleh seluruh keluarga serta kerabat.
    </Fragment>

    <Fragment slot="image">
      <YouTube id="gxBkghlglTg" title="Cara Membuat Undangan Khitanan Digital" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <Features2
    title="Tentang Layanan Khitan Kami"
    subtitle="Khitanan adalah momen transisi penting bagi anak laki-laki menuju kedewasaan. Kami hadir untuk membantu para orang tua menyebarkan undangan tasyakuran secara modern tanpa mengurangi rasa hormat. Dibangun dengan Astro 5.0, undangan digital khitanan ini memastikan setiap tamu mendapatkan informasi lokasi dan waktu acara dengan sangat cepat dan akurat."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Stats
    title="Kepercayaan Keluarga Indonesia"
    subtitle="Angka pencapaian kami dalam membantu menyukseskan acara tasyakuran khitanan di berbagai daerah."
    stats={[
      { title: 'Desain Khitan', amount: '8K' },
      { title: 'Tasyakuran Selesai', amount: '62' },
      { title: 'Rating Puas', amount: '4.9' },
      { title: 'Undangan Terkirim', amount: '135K' },
    ]}
  />

  <Brands
    title="Partner & Keamanan Pembayaran"
    subtitle="Kami menjamin kemudahan proses transaksi agar orang tua dapat fokus mendampingi putra tercinta saat hari khitanan tiba."
    icons={[]}
    images={[
      { src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png', alt: 'Paypal' },
      { src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png', alt: 'Visa' },
      { src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png', alt: 'Ebay' },
      { src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png', alt: 'Youtube' },
      { src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png', alt: 'Microsoft' },
      { src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png', alt: 'Node JS' },
      { src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png', alt: 'Google' },
      { src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png', alt: 'Meta' },
      { src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png', alt: 'Yahoo' },
    ]}
  />

  <Features2
    title="Fitur Unggulan Khitanan"
    subtitle="Semua kebutuhan undangan digital khitanan dalam satu paket lengkap dan praktis."
    items={[
      {
        title: 'Input Identitas Anak',
        description: 'Mudah memasukkan nama lengkap putra yang dikhitan, foto gagah sang jagoan, hingga informasi orang tua.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Pratinjau Tema Ceria',
        description: 'Pilih dan lihat langsung berbagai tema desain yang sesuai dengan karakter anak-anak hingga gaya minimalis.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Bantuan Admin Cepat',
        description: 'Kami siap membantu penyesuaian teks doa walimatul khitan atau kutipan ayat suci dalam undangan Anda.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Features
    id="features"
    title="Mengapa Memilih Undangan Khitan Kami?"
    subtitle="Didesain untuk memberikan kemudahan bagi penyelenggara dan kenyamanan bagi tamu undangan."
    columns={3}
    items={[
      {
        title: 'Desain Gagah & Menarik',
        description: 'Koleksi desain yang disesuaikan untuk jagoan kecil, mulai dari tema superhero hingga nuansa islami modern.',
        icon: 'tabler:artboard',
      },
      {
        title: 'Navigasi Peta Lokasi',
        description: 'Integrasi Google Maps yang akurat memudahkan kerabat datang ke kediaman atau tempat syukuran.',
        icon: 'tabler:picture-in-picture',
      },
      {
        title: 'Manajemen Tamu (RSVP)',
        description: 'Kelola daftar hadir tamu dengan lebih teratur agar persiapan hidangan tasyakuran lebih tepat sasaran.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Countdown Hari H',
        description: 'Menampilkan hitung mundur menuju waktu pelaksanaan tasyakuran untuk meningkatkan antusiasme tamu.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Ucapan Doa Digital',
        description: 'Ruang khusus bagi tamu untuk memberikan doa selamat atas khitanan putra Anda secara daring.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Kado & Angpao Digital',
        description: 'Memudahkan tamu yang ingin berbagi kebahagiaan melalui fitur amplop digital atau kado fisik.',
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <FAQs
    title="Pertanyaan Mengenai Undangan Khitan"
    items={[
      {
        title: 'Apakah bisa menambahkan foto jagoan saya?',
        description: 'Tentu saja! Ayah & Bunda bisa mengunggah foto putra tercinta yang tampil gagah untuk dipajang di halaman utama.',
      },
      {
        title: 'Bisakah link undangan dibagikan berkali-kali?',
        description: 'Ya, link undangan bisa dibagikan tanpa batas ke semua grup WhatsApp, Instagram, maupun Facebook.',
      },
      {
        title: 'Apakah ada musik latar islami?',
        description: 'Kami menyediakan berbagai pilihan musik latar, mulai dari nasyid lembut hingga instrumen ceria khas anak-anak.',
      },
      {
        title: 'Bagaimana cara mengganti tanggal acara?',
        description: 'Anda dapat masuk ke dashboard editor dan mengganti tanggal kapan saja jika terjadi perubahan jadwal acara.',
      },
      {
        title: 'Dapatkah saya menggunakan nama panggilan tamu?',
        description: 'Bisa, sistem kami mendukung personalisasi nama tamu agar undangan terasa lebih akrab dan spesial.',
      },
      {
        title: 'Apakah undangan ini bisa dibuka di semua HP?',
        description: 'Tentu, desain kami sudah sepenuhnya responsif dan tampil sempurna di semua perangkat smartphone maupun komputer.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <Features3
    title="Butuh Bantuan Lebih Lanjut?"
    subtitle="Tim kami siap membantu orang tua dalam menyiapkan undangan tasyakuran terbaik."
    columns={4}
    items={[
      {
        title: 'Telepon',
        icon: 'tabler:phone',
        callToAction: { target: '_blank', text: 'Telepon', href: '/', variant: 'link' },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: { target: '_blank', text: 'Kirim Email', href: '/', variant: 'link' },
      },
      {
        title: 'Konsultasi Desain',
        icon: 'tabler:message-circle',
        callToAction: { target: '_blank', text: 'Chat Sales', href: '/', variant: 'link' },
      },
      {
        title: 'Bantuan Teknis',
        icon: 'tabler:message-circle',
        callToAction: { target: '_blank', text: 'Chat Support', href: '/', variant: 'link' },
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Buat Undangan Sekarang',
        href: '#',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">Sempurnakan Momen Tasyakuran Khitan</Fragment>

    <Fragment slot="subtitle">
      Berikan kesan mendalam pada momen bersejarah putra jagoan Anda. Buat undangan khitanan digital yang elegan sekarang juga..
    </Fragment>
  </CallToAction>
</Layout>