---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Undangan Ulang Tahun Digital - Rayakan Momen Spesial',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Pesta Ulang Tahun Seru"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Pilih Tema Pesta',
        href: 'https://undanganweb.site/tema',
        icon: 'tabler:download',
      },
      { text: 'Fitur Undangan', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Buat Pesta <span class="hidden sm:inline">Ulang Tahun</span> Anda Lebih <span class="text-accent dark:text-white"
        >Meriah</span
      > dengan Undangan Digital
    </Fragment>

    <Fragment slot="subtitle">
      Rayakan pertambahan usia dengan cara yang unik! Templat undangan ulang tahun kami memudahkan Anda berbagi
      kebahagiaan dengan teman dan keluarga secara instan, keren, dan kekinian.
    </Fragment>

    <Fragment slot="image">
      <YouTube id="gxBkghlglTg" title="Cara Membuat Undangan Ulang Tahun Digital" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero>

  <Features2
    title="Tentang Layanan Kami"
    subtitle="Kami memahami bahwa setiap ulang tahun adalah pencapaian berharga. Berawal dari keinginan untuk mempermudah koordinasi pesta, kami menciptakan sistem undangan digital yang interaktif. Dengan teknologi Astro 5.0, undangan ulang tahun Anda tidak hanya tampil cantik, tapi juga super cepat saat dibuka oleh para tamu di smartphone mereka."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Stats
    title="Dampak Kegembiraan yang Kami Bagikan"
    subtitle="Angka-angka ini adalah bukti dari ribuan pesta ulang tahun yang telah kami bantu meriahkan di seluruh penjuru negeri."
    stats={[
      { title: 'Tema Terpakai', amount: '45K' },
      { title: 'Pesta Terlaksana', amount: '92' },
      { title: 'Rating Kepuasan', amount: '4.9' },
      { title: 'Tamu Terundang', amount: '210K' },
    ]}
  />

  <Brands
    title="Didukung Oleh Teknologi & Pembayaran Terpercaya"
    subtitle="Kami memastikan kemudahan transaksi agar Anda bisa lebih fokus mempersiapkan kue dan dekorasi pesta Anda."
    icons={[]}
    images={[
      { src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png', alt: 'Paypal' },
      { src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png', alt: 'Visa' },
      { src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png', alt: 'Ebay' },
      { src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png', alt: 'Youtube' },
      { src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png', alt: 'Microsoft' },
      { src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png', alt: 'Node JS' },
      { src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png', alt: 'Google' },
      { src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png', alt: 'Meta' },
      { src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png', alt: 'Yahoo' },
    ]}
  />

  <Features2
    title="Fitur Spesial untuk Ulang Tahun"
    subtitle="Segala hal yang Anda butuhkan untuk mengelola tamu undangan pesta ulang tahun dalam satu genggaman."
    items={[
      {
        title: 'Panduan Pembuatan',
        description:
          'Langkah-langkah mudah mengunggah foto ulang tahun, titik lokasi pesta, dan memilih musik latar yang ceria.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Pratinjau Langsung',
        description:
          'Lihat bagaimana undangan Anda tampil sebelum dikirimkan ke teman-teman geng atau keluarga besar Anda.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Bantuan Teknis',
        description: 'Tim admin kami siap membantu jika Anda kesulitan mengatur RSVP atau kustomisasi teks undangan.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <Features
    id="features"
    title="Keunggulan Undangan Ulang Tahun Kami"
    subtitle="Didesain khusus untuk memberikan kesan seru dan berjiwa muda bagi siapa saja yang merayakannya."
    columns={3}
    items={[
      {
        title: 'Desain Ceria & Enerjik',
        description:
          'Banyak pilihan tema mulai dari gaya kartun, estetik minimalis, hingga gaya pesta malam yang elegan.',
        icon: 'tabler:artboard',
      },
      {
        title: 'Fitur Countdown (Hitung Mundur)',
        description: 'Tamu Anda akan semakin antusias dengan fitur hitung mundur menuju waktu pesta dimulai.',
        icon: 'tabler:picture-in-picture',
      },
      {
        title: 'Dashboard RSVP Canggih',
        description: 'Pantau siapa saja teman yang bisa hadir dan siapa yang tidak secara real-time dari ponsel Anda.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Akses Tanpa Batas',
        description: 'Sebarkan link undangan ke WhatsApp, Instagram, atau Telegram tanpa batasan jumlah tamu.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Fitur Ucapan & Doa',
        description: 'Teman-teman bisa menuliskan ucapan selamat ulang tahun langsung di halaman undangan Anda.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Kado Digital',
        description: 'Tamu bisa mengirimkan kado atau angpao secara digital melalui integrasi E-Wallet yang tersedia.',
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <FAQs
    title="Hal yang Sering Ditanyakan"
    items={[
      {
        title: 'Apakah bisa digunakan untuk ulang tahun anak?',
        description:
          'Sangat bisa! Kami memiliki koleksi desain khusus anak-anak dengan berbagai karakter dan warna yang lucu.',
      },
      {
        title: 'Berapa lama undangan saya tetap aktif?',
        description:
          'Tergantung paket yang dipilih, namun biasanya aktif hingga 1 bulan setelah acara selesai agar Anda tetap bisa melihat ucapan dari teman-teman.',
      },
      {
        title: 'Bisakah saya menambahkan video di undangan?',
        description:
          'Ya, Anda bisa menyematkan video dari YouTube atau TikTok sebagai bagian dari profil ulang tahun Anda.',
      },
      {
        title: 'Apakah tamu perlu login untuk mengisi RSVP?',
        description:
          'Tidak perlu. Tamu cukup membuka link dan mengisi nama serta status kehadiran mereka dalam hitungan detik.',
      },
      {
        title: 'Bagaimana jika lokasi pesta berubah?',
        description:
          'Jangan khawatir, Anda bisa mengubah detail lokasi di dashboard kapan saja dan link undangan otomatis terupdate.',
      },
      {
        title: 'Berapa banyak foto yang bisa saya pasang?',
        description:
          'Setiap paket memiliki batas berbeda, namun paket standar kami memungkinkan Anda memasang galeri berisi hingga 10 foto terbaik.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <Features3
    title="Ada yang Ingin Ditanyakan?"
    subtitle="Kami siap membantu Anda menyiapkan undangan pesta terbaik."
    columns={4}
    items={[
      {
        title: 'Telepon',
        icon: 'tabler:phone',
        callToAction: { target: '_blank', text: 'Telepon', href: '/', variant: 'link' },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: { target: '_blank', text: 'Kirim Email', href: '/', variant: 'link' },
      },
      {
        title: 'Tanya Paket',
        icon: 'tabler:message-circle',
        callToAction: { target: '_blank', text: 'Chat Sales', href: '/', variant: 'link' },
      },
      {
        title: 'Bantuan',
        icon: 'tabler:message-circle',
        callToAction: { target: '_blank', text: 'Chat Support', href: '/', variant: 'link' },
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Mulai Buat Undangan',
        href: '#',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">Jadikan Ulang Tahun Anda Berkesan!</Fragment>

    <Fragment slot="subtitle">
      Jangan biarkan momen spesial berlalu begitu saja. Buat undangan digital Anda sekarang dan kumpulkan orang-orang
      tersayang dalam pesta yang luar biasa.
    </Fragment>
  </CallToAction>
</Layout>
