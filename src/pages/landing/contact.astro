---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontak Kami',
};
---

<Layout metadata={metadata}>
  <HeroText tagline="Kontak" title="Mari Terhubung!" />

  <ContactUs
    id="form"
    title="Kirimkan pesan kepada kami hari ini!"
    subtitle="Untuk jawaban yang lebih cepat, silakan jelajahi bagian FAQ kami. Anda mungkin menemukan solusi yang dicari di sana! Jika tidak, tim dukungan kami akan dengan senang hati membantu Anda."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nama Lengkap',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Alamat Email',
      },
    ]}
    textarea={{
      label: 'Pesan Anda',
    }}
    disclaimer={{
      label:
        'Dengan mengirimkan formulir kontak ini, Anda mengakui dan menyetujui pengumpulan informasi pribadi Anda untuk keperluan layanan kami.',
    }}
    description="Tim dukungan kami biasanya memberikan tanggapan dalam waktu 24 jam kerja."
  />

  <Features2
    title="Kami siap membantu Anda!"
    items={[
      {
        title: 'Dukungan Umum',
        description: `Hubungi kami untuk pertanyaan terkait manajemen akun, navigasi situs web, masalah pembayaran, cara mengakses templat yang telah dibeli, atau pertanyaan umum mengenai fungsi situs.`,
      },
      {
        title: 'Hubungi Penjualan',
        description:
          'Hubungi kami untuk pertanyaan seputar pembelian paket, opsi kustomisasi desain, lisensi penggunaan komersial, atau pertanyaan detail mengenai templat tertentu.',
      },
      {
        title: 'Dukungan Teknis',
        description:
          'Hubungi kami jika Anda menghadapi kendala seperti instalasi templat, kesulitan dalam mengedit, masalah kompatibilitas perangkat lunak, kesalahan unduhan, atau tantangan teknis lainnya.',
      },
      {
        title: 'Telepon',
        description: '+62 (21) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'halo@undangandigital.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Lokasi Kantor',
        description: 'Jl. Inspirasi No. 88, Jakarta Selatan, Indonesia',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
