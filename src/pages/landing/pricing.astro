---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Harga Undangan Digital',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Pricing"
    title="Paket Harga Undangan Digital Terbaik"
    subtitle="Pilih paket yang paling sesuai untuk merayakan momen spesial dan perjalanan cinta Anda."
  />

  <Prices
    title="Daftar Harga"
    subtitle="Investasi sekali bayar untuk kenangan selamanya"
    prices={[
      {
        title: 'basic',
        subtitle: 'Pilihan tepat untuk acara intim',
        price: 99,
        period: 'per project',
        items: [
          {
            description: 'Masa aktif undangan 3 bulan',
          },
          {
            description: 'Fitur RSVP & Buku Tamu',
          },
          {
            description: 'Integrasi Google Maps Lokasi',
          },
          {
            description: 'Galeri maksimal 5 foto',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: 'standard',
        subtitle: 'Pilihan populer para calon mempelai',
        price: 149,
        period: 'per project',
        items: [
          {
            description: 'Masa aktif undangan 1 tahun',
          },
          {
            description: 'Unlimited Nama Tamu (WA Sender)',
          },
          {
            description: 'Fitur Kirim Kado & Angpao Digital',
          },
          {
            description: 'Background Music & Love Story',
          },
          {
            description: 'Galeri foto & Video (Unlimited)',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'premium',
        subtitle: 'Eksklusif dengan fitur terlengkap',
        price: 299,
        period: 'per project',
        items: [
          {
            description: 'Masa aktif selamanya (Lifetime)',
          },
          {
            description: 'Custom Domain (nama-pasangan.com)',
          },
          {
            description: 'Filter Instagram Wedding Custom',
          },
          {
            description: 'Prioritas revisi & bantuan admin',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
    ]}
  />

  <Features3
    title="Fitur Unggulan Kami"
    subtitle="Temukan kelebihan menggunakan layanan undangan digital kami"
    columns={2}
    items={[
      {
        title: 'Tiered Pricing Plans',
        description: 'Berbagai pilihan paket harga yang fleksibel sesuai dengan budget dan kebutuhan acara Anda.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Harga jujur yang tertera adalah total yang Anda bayar tanpa biaya tambahan tersembunyi.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Metode pembayaran aman dan otomatis untuk memastikan transaksi Anda terlindungi.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Access',
        description: 'Akses langsung ke dashboard editor segera setelah pembayaran Anda terkonfirmasi.',
        icon: 'tabler:accessible',
      },
      {
        title: 'Upgrade Value',
        description: 'Kemudahan untuk upgrade ke paket yang lebih tinggi kapan saja sebelum hari H acara.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24H support',
        description: 'Tim kami siap membantu menjawab pertanyaan Anda melalui live chat atau WhatsApp setiap hari.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <Steps
    title="Langkah Mudah Menuju Undangan Digital Anda"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review order',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter payment details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Download and start using the template(s)',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1511795409834-ef04bbd61622?auto=format&fit=crop&w=987&q=80',
      alt: 'Wedding Steps Image',
    }}
  />

  <FAQs
    title="Pertanyaan Seputar Harga"
    subtitle="Kami merangkum beberapa hal yang sering ditanyakan mengenai biaya dan layanan undangan digital."
    columns={1}
    items={[
      {
        title: 'Do the plans come with customer support?',
        description:
          'Tentu saja, semua paket sudah termasuk akses bantuan tim support kami untuk memastikan undangan Anda sempurna.',
      },
      {
        title: 'Is there a trial period for the different plans?',
        description:
          'Kami tidak menyediakan trial, namun Anda bisa melihat dashboard demo untuk mencoba fitur editor kami secara gratis.',
      },
      {
        title: 'Can I switch between plans?',
        description: 'Sangat bisa! Anda dapat melakukan upgrade paket kapan pun dibutuhkan melalui panel akun Anda.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'Kami menerima transfer bank, E-Wallet (QRIS), dan metode pembayaran online lainnya yang aman dan cepat.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'Tidak ada biaya tersembunyi. Harga yang tertera sudah mencakup semua fitur yang disebutkan dalam paket tersebut.',
      },
    ]}
  />

  <CallToAction
    title="Siap Berbagi Kebahagiaan?"
    subtitle="Mulai buat undangan digital elegan Anda sekarang dan bagikan momen spesial Anda kepada semua orang."
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: '/',
      },
    ]}
  />
</Layout>
